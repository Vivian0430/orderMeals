/* pages/main/main.wxss */

.bg {
  width: 100vw;
  height: 10vh;
  background-color: #1aad19;
}

.nav {
  position: relative;
  height: 7vh!important;
  width: 100vw;
  background-color: rgb(250, 250, 250);
}

.notice {
  position: absolute;
  width: 530rpx;
  height: 4vh;
  line-height: 4vh;
  left: 26vw;
}

.details {
  font-size: 12px;
  font-weight: 550;
  color: gray;
  margin-right: 5rpx;
  background-color: rgb(250, 250, 250);
  width: 100%;
}
.details text{
  display: block;
  white-space: wrap;
  background-color: rgb(250, 250, 250);
  z-index: 9;
  margin-left:26vw;
}
.icon-shousuo{
  font-weight:600;
}
.hide{
  display: none;
}
.inline-show{
  display: inline-block;
}
.slidedown{
  animation: sildedown 1s linear;
}
.slideup{
animation: sildeup 1s linear;
}
.tab {
  width: 100%;
  text-align: center;
  height: 8vh;
  line-height: 8vh;
  box-sizing: border-box;
}

.tab-item {
  font-size: 14px;
  display: inline-block;
  width: 50%;
  color: gray;
}

.active {
  color: black;/*
  border-bottom: 2rpx solid #1aad19;*/
}
 @keyframes slideup{
   from{
     transform: translateY(100%);
   }
   to{
     transform: translateY(0%);
   }
 }
 @keyframes slidedown{
   from{
     transform: translateY(0%);
   }
   to{
     transform: translateY(100%);
   }
 }

.product-menu{
  width: 20vw;
  font-size: 14px;
  border-right: 1rpx solid #eaeaea; 
  height: 67vh;
}
.product-menu view{
  text-align: center;
  height:7vh;
  line-height: 7vh;
  background-color: #fff;
  border-bottom:1rpx solid #eaeaea;
}
.product-list{
  flex:1;
  height: 67vh;
  display: flex;
}
.product{
  width: 100%;
  border-bottom: 1rpx solid #eaeaea;
  display: flex;
  position: relative;
}
.product image{
  margin: 25rpx;
  width: 150rpx;
  height: 150rpx;
}
.selected{
   border-bottom: 1rpx solid #1aad19 !important;
}
.price{
  color: gray;
  font-size:14px;
  padding-left: 30vw;
}
.fix-box{
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, .3);
  height:100vh;
  width: 100vw;
  z-index: 888;
}
.footer{
  display: flex;
  z-index: 999;
   position: fixed;
   bottom:0;
   left:0;
   width: 100vw;
   height: 8vh;
   line-height: 8vh;
   border-top:2rpx solid #eaeaea;
   background-color: #fff;
 }
 .add-info{
   background-color: #fff;
   width: 100vw;
   z-index:990;
   position: absolute;
   bottom:8vh;
 }